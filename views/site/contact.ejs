<div class="contact-divv">
  <h2>Send us a message</h2>
  <div class="container cont-cont">
    <form class="form-contact">
      <input
        type="text"
        class="text"
        name="name"
        placeholder="Your Full Name..."
        required
      />
      <input
        type="email"
        class="text"
        name="email"
        placeholder="Your Email..."
        required
      />
      <textarea
        name="message"
        class="text"
        placeholder="Your Message..."
        rows="7"
        required
      ></textarea>
      <button class="btn msg-btn" type="submit">
        <!-- <FiSend class="mx-1" />  -->
        Send Message
      </button>
    </form>
  </div>
</div>
